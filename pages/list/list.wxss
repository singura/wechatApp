/* pages/list/list.wxss */

.shop {
  display: flex;
  padding: 20rpx;
  border-bottom: 1px solid #ddd;
}

.img {
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
}

.shop-info {
  display: flex;
  flex-direction: column;
  font-size: 12px;
  color: #666;
  line-height: 20px;
}

.shop-name {
  font-size: 16px;
  color: #333;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  width: 320rpx;
}

.shop-adress {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  width: 500rpx;
}

.box {
  display: flex;
  justify-content: space-between;
}

.box .start {
  font-size: 20px;
  color: #ccc;
  position: relative;
  right: 0;
}

.box .start::after {
  content: "★★★★★";
  color: orange;
  position: absolute;
  height: 100%;
  width: 70%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0);
  overflow: hidden;
}
